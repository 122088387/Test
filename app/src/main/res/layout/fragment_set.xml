<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:toggle="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/set_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_title_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/set_item"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person_touxiang"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_person"
                        android:text=""
                        android:textSize="20sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrows_right"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_cancle_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/set_item"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/quxiao_login"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_1"
                            android:text="自动登录"
                            android:textSize="15sp"/>

                        <com.zcw.togglebutton.ToggleButton
                            android:id="@+id/auto_btn"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            toggle:isDefaultOn="true"
                            toggle:onColor="#2897F2"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/set_item"
                        android:padding="10dp">

                        <FrameLayout
                            android:id="@+id/fl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/wodeyinhangka"/>

                            <ImageView
                                android:id="@+id/iv_red"
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="right"
                                android:src="@drawable/red"
                                android:visibility="gone"/>

                        </FrameLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/fl"
                            android:text="版本更新"
                            android:textSize="15sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrows_right"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/set_item"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wea_wodebaozhang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_3"
                            android:text="关于系统"
                            android:textSize="15sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrows_right"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_update_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/set_item"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/lock"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_4"
                            android:text="修改密码"
                            android:textSize="15sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrows_right"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_voice_vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/set_item"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/set_voice"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_5"
                            android:text="新消息提醒"
                            android:textSize="15sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrows_right"/>
                    </RelativeLayout>

                    <!--<RelativeLayout-->
                    <!--android:id="@+id/rl_exception"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="1dp"-->
                    <!--android:background="@color/set_item"-->
                    <!--android:padding="10dp">-->

                    <!--<ImageView-->
                    <!--android:id="@+id/iv_4"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/app_10000110"/>-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@id/iv_4"-->
                    <!--android:text="异常反馈"-->
                    <!--android:textSize="15sp"/>-->

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:src="@drawable/ic_arrows_right"/>-->
                    <!--</RelativeLayout>-->
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/set_item"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="退出登录"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/set_background">
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
